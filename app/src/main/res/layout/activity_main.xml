<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GST Calculator App"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter the amount"
        android:id="@+id/text_view1"
        android:layout_marginTop="100sp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_below="@id/text_view1" />

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_amount"
        android:gravity="center_horizontal"
        android:layout_marginTop="50sp"
        android:text="Enter GST percent"
        android:textSize="24sp"/>


    <EditText
        android:id="@+id/text_gst_percent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_below="@id/text_view2" />

    <TextView
        android:id="@+id/text_gst_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_gst_percent"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/text_total_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:layout_below="@id/text_gst_amount"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:layout_below="@id/text_total_amount"
        android:layout_marginTop="15dp"
        android:text="Calculate"/>
</RelativeLayout>